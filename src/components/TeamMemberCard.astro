---
interface Props {
  member: {
    id: string;
    name: string;
    role: string;
    image: string;
    bio: string;
    email?: string;
    department?: string;
    yearsExperience?: number;
    social?: Array<{ platform: string; url: string }>;
  };
  href: string;
}

const { member, href } = Astro.props;

// Color mapping for departments
const departmentColors: Record<string, string> = {
  'Dirección': 'bg-purple-100 text-purple-800 dark:bg-purple-900/30 dark:text-purple-300',
  'Operaciones': 'bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-300',
  'Creatividad': 'bg-pink-100 text-pink-800 dark:bg-pink-900/30 dark:text-pink-300',
  'Tecnología': 'bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-300',
  'Marketing': 'bg-orange-100 text-orange-800 dark:bg-orange-900/30 dark:text-orange-300',
  'Producción': 'bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-300',
};

const badgeColor = member.department ? departmentColors[member.department] || departmentColors['Dirección'] : 'bg-purple-100 text-purple-800 dark:bg-purple-900/30 dark:text-purple-300';
---

<a href={href} class="group relative overflow-hidden rounded-lg transition-all duration-500 hover:-translate-y-2">
  <!-- Card Container -->
  <div class="relative overflow-hidden rounded-lg bg-white dark:bg-eventflow-black-dark border border-gray-200 dark:border-eventflow-border-dark shadow-sm dark:shadow-none hover:shadow-lg dark:hover:shadow-eventflow-primary/20 transition-all duration-500 h-full flex flex-col">

    <!-- Image Section -->
    <div class="relative overflow-hidden h-64 bg-gradient-to-br from-gray-100 to-gray-200 dark:from-eventflow-black dark:to-eventflow-black-dark">
      <img
        src={member.image}
        alt={member.name}
        class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-110"
      />
      <!-- Overlay gradient -->
      <div class="absolute inset-0 bg-gradient-to-t from-black/40 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
    </div>

    <!-- Content Section -->
    <div class="relative flex-grow flex flex-col p-6">
      <!-- Badge -->
      {member.department && (
        <div class="mb-3 inline-block">
          <span class={`text-xs font-semibold px-3 py-1 rounded-full ${badgeColor}`}>
            {member.department}
          </span>
        </div>
      )}

      <!-- Name -->
      <h3 class="text-lg font-bold text-gray-900 dark:text-white group-hover:text-eventflow-primary dark:group-hover:text-eventflow-primary transition-colors mb-1">
        {member.name}
      </h3>

      <!-- Role -->
      <p class="text-sm font-medium text-eventflow-primary dark:text-eventflow-primary mb-3 line-clamp-1">
        {member.role}
      </p>

      <!-- Years of Experience -->
      {member.yearsExperience && (
        <p class="text-xs text-gray-600 dark:text-gray-400 mb-3">
          {member.yearsExperience}+ años de experiencia
        </p>
      )}

      <!-- Bio -->
      <p class="text-sm text-gray-700 dark:text-gray-300 line-clamp-2 flex-grow mb-4">
        {member.bio}
      </p>

      <!-- Social Links (Desktop hover) -->
      {member.social && member.social.length > 0 && (
        <div class="flex gap-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
          {member.social.map((social) => (
            <a
              href={social.url}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex h-8 w-8 items-center justify-center rounded-full bg-eventflow-primary/10 hover:bg-eventflow-primary/20 text-eventflow-primary transition-all duration-300"
              title={social.platform}
              onclick="event.stopPropagation()"
            >
              {social.platform === 'linkedin' && (
                <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.475-2.236-1.986-2.236-1.081 0-1.722.722-2.004 1.418-.103.249-.129.597-.129.946v5.441h-3.554s.047-8.733 0-9.637h3.554v1.364c.425-.654 1.185-1.586 2.882-1.586 2.105 0 3.691 1.375 3.691 4.342v5.517zM5.337 8.855c-1.144 0-1.915-.762-1.915-1.715 0-.955.77-1.715 1.968-1.715 1.197 0 1.916.76 1.94 1.715 0 .953-.743 1.715-1.993 1.715zm1.581 11.597H3.635V9.236h3.283v11.216zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.225 0z"/>
                </svg>
              )}
              {social.platform === 'twitter' && (
                <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.953 4.57a10 10 0 002.856-9.753 11.054 11.054 0 01-3.207.982 5.526 5.526 0 00-9.303 5.036 15.665 15.665 0 01-11.362-5.773 5.528 5.528 0 001.712 7.377A5.506 5.506 0 01.41 9.397v.066a5.523 5.523 0 004.433 5.408 5.53 5.53 0 01-2.493.187 5.526 5.526 0 005.159 3.834 11.093 11.093 0 01-6.862 2.369c-.446 0-.888-.027-1.321-.08a15.645 15.645 0 008.487 2.479c10.184 0 15.717-8.443 15.717-15.718 0-.24-.005-.479-.015-.718a11.2 11.2 0 002.743-2.873z"/>
                </svg>
              )}
              {social.platform === 'instagram' && (
                <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0m5.521 17.621h-11.04V6.379h11.04v11.242zM12 8a4 4 0 100 8 4 4 0 000-8zm4.5-1.5a.75.75 0 11-1.5 0 .75.75 0 011.5 0z"/>
                </svg>
              )}
              {social.platform === 'github' && (
                <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v 3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              )}
              {social.platform === 'youtube' && (
                <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                </svg>
              )}
            </a>
          ))}
        </div>
      )}
    </div>
  </div>
</a>

<style>
  a {
    text-decoration: none;
  }
</style>
