---
interface Props {
  alt?: string;
  aspectRatio?: 'square' | 'video' | 'portrait' | 'landscape';
  className?: string;
}

const {
  alt = 'Image placeholder',
  aspectRatio = 'square',
  className = '',
} = Astro.props;

const aspectClasses = {
  square: 'aspect-square',
  video: 'aspect-video',
  portrait: 'aspect-[3/4]',
  landscape: 'aspect-[4/3]',
};
---

<div class={`relative overflow-hidden bg-gradient-to-br from-eventflow-black-dark to-eventflow-black ${aspectClasses[aspectRatio]} ${className}`}>
  <!-- Shimmer effect -->
  <div class="absolute inset-0 -left-full w-full h-full bg-gradient-to-r from-transparent via-white/20 to-transparent animate-shimmer"></div>

  <!-- Content slot or fallback icon -->
  <div class="w-full h-full flex items-center justify-center">
    <svg
      class="w-12 h-12 text-white/20"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="1.5"
        d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
      />
    </svg>
  </div>
</div>

<style>
  @keyframes shimmer {
    0% {
      left: -100%;
    }
    100% {
      left: 100%;
    }
  }

  .animate-shimmer {
    animation: shimmer 2s infinite;
  }
</style>
