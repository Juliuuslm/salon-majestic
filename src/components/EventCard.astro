---
interface Props {
  title: string;
  date: string;
  time: string;
  location: string;
  image: string;
  description: string;
  link: string;
  delay?: string;
}

const {
  title,
  date,
  time,
  location,
  image,
  description,
  link,
  delay = '0s',
} = Astro.props;
---

<div class="overflow-hidden rounded-2xl border border-white/10 bg-white/5 backdrop-blur-xl transition-all duration-500 hover:bg-white/10 hover:border-eventflow-primary/40 hover:shadow-2xl hover:shadow-eventflow-primary/20 hover:scale-[1.02] hover:-translate-y-1 group wow animate__animated animate__fadeInLeft" data-wow-duration="0.8s" data-wow-delay={delay}>
  <div class="relative overflow-hidden bg-gray-200 h-48">
    <img
      src={image}
      alt={title}
      class="h-full w-full object-cover transition-transform duration-700 group-hover:scale-110"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300" />
    <div class="absolute top-4 right-4 bg-eventflow-primary text-white px-4 py-2 rounded-full text-sm font-semibold">
      {date}
    </div>
  </div>

  <div class="p-6">
    <h3 class="mb-3 text-lg font-bold text-white line-clamp-2">
      {title}
    </h3>

    <div class="mb-4 space-y-2 text-sm text-gray-300">
      <div class="flex items-center gap-2">
        <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
        </svg>
        <span>{time}</span>
      </div>
      <div class="flex items-center gap-2">
        <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
        </svg>
        <span class="line-clamp-1">{location}</span>
      </div>
    </div>

    <p class="mb-6 line-clamp-2 text-sm text-white/90">
      {description}
    </p>

    <a href={link} class="btn-primary text-sm w-full text-center block">
      Ver detalles
    </a>
  </div>
</div>
