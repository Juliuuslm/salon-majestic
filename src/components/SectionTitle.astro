---
interface Props {
  tagline?: string;
  title: string;
  subtitle?: string;
  alignment?: 'left' | 'center' | 'right';
}

const {
  tagline,
  title,
  subtitle,
  alignment = 'center',
} = Astro.props;

const alignmentClass = {
  left: 'text-left',
  center: 'text-center',
  right: 'text-right',
}[alignment];
---

<div class={`section-title ${alignmentClass}`}>
  {tagline && (
    <span class="inline-block rounded-full bg-eventflow-base/20 px-6 py-2 text-sm font-medium text-eventflow-base">
      {tagline}
    </span>
  )}
  <h2 class="mt-4 text-4xl font-bold md:text-5xl lg:text-6xl text-white">
    {title}
  </h2>
  {subtitle && (
    <p class={`mt-4 max-w-2xl text-lg text-white/90 ${alignment === 'center' ? 'mx-auto' : ''}`}>
      {subtitle}
    </p>
  )}
</div>
