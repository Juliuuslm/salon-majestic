---
interface Props {
  name: string;
  role: string;
  company: string;
  avatar: string;
  quote: string;
  rating?: number;
}

const {
  name,
  role,
  company,
  avatar,
  quote,
  rating = 5,
} = Astro.props;
---

<div class="testimonial-card overflow-hidden rounded-lg border border-eventflow-border-dark p-6 transition-all duration-300 hover:shadow-lg hover:shadow-eventflow-primary/20 hover:-translate-y-1 animate-in fade-in slide-in-from-bottom-4">
  <div class="mb-4 flex items-start justify-between">
    <div class="flex items-center gap-4">
      <img
        src={avatar}
        alt={name}
        class="h-12 w-12 rounded-full object-cover ring-2 ring-eventflow-primary/30 transition-transform duration-300 hover:scale-110"
      />
      <div>
        <h4 class="font-semibold text-white">{name}</h4>
        <p class="text-sm text-gray-300">
          {role} en <span class="font-medium">{company}</span>
        </p>
      </div>
    </div>
  </div>

  {rating && (
    <div class="mb-4 flex gap-1">
      {[...Array(5)].map((_, i) => (
        <svg
          key={i}
          class={`h-4 w-4 ${
            i < rating
              ? 'text-yellow-400'
              : 'text-gray-600'
          }`}
          fill="currentColor"
          viewBox="0 0 20 20"
        >
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
        </svg>
      ))}
    </div>
  )}

  <p class="text-white/90 italic leading-relaxed">
    "{quote}"
  </p>
</div>
