---
import BaseLayout from '@layouts/BaseLayout.astro';
import SectionTitle from '@components/SectionTitle.astro';
import PageHeaderShapes from '@components/PageHeaderShapes.astro';
import team from '@data/team.json';

const seo = {
  title: 'Equipo - EventFlow',
  description: 'Conoce al equipo profesional de EventFlow, especialistas en gestión de eventos.',
  type: 'website',
};
---

<BaseLayout seo={seo}>
  <!-- Page Header -->
  <PageHeaderShapes className="relative">
    <section class="bg-gradient-to-r from-eventflow-primary to-eventflow-base text-white py-16">
      <div class="container-custom">
        <h1 class="text-4xl md:text-5xl font-bold">Nuestro Equipo</h1>
        <p class="mt-4 text-lg text-white/90">Profesionales apasionados por los eventos</p>
      </div>
    </section>
  </PageHeaderShapes>

  <!-- Team Grid -->
  <section class="py-20 md:py-28 bg-eventflow-black">
    <div class="container-custom">
      <SectionTitle
        title="Expertos en Eventos"
        subtitle="Cada miembro del equipo aporta experiencia y dedicación única"
        alignment="center"
      />

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mt-16">
        {
          team.map((member) => (
            <a
              href={`/team/${member.id}`}
              class="group overflow-hidden rounded-lg border border-eventflow-border-dark bg-eventflow-black transition-all duration-300 hover:shadow-lg hover:-translate-y-1"
            >
              <div class="relative overflow-hidden aspect-square bg-gradient-to-br from-eventflow-black-dark to-eventflow-black-dark/50 shimmer-bg">
                <img
                  src={member.image}
                  alt={member.name}
                  class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-110"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-eventflow-black/80 to-transparent flex flex-col justify-end p-6 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                  <p class="text-sm text-white/90 leading-relaxed line-clamp-2">
                    {member.bio}
                  </p>
                </div>
              </div>

              <div class="p-6">
                <h3 class="text-lg font-bold text-white group-hover:text-eventflow-primary transition-colors">
                  {member.name}
                </h3>
                <p class="mb-4 text-sm text-eventflow-primary font-semibold">
                  {member.role}
                </p>
                <p class="text-xs text-gray-300 line-clamp-2">
                  {member.bio}
                </p>

                {member.social && (
                  <div class="mt-4 flex gap-2">
                    {member.social.map((social) => (
                      <a
                        href={social.url}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="text-gray-300 hover:text-eventflow-primary transition-colors"
                        title={social.platform}
                      >
                        <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
                          <circle cx="12" cy="12" r="10" />
                        </svg>
                      </a>
                    ))}
                  </div>
                )}
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-16 bg-gradient-to-r from-eventflow-primary to-eventflow-base text-white text-center">
    <div class="container-custom">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">¿Quieres trabajar con nosotros?</h2>
      <a href="/contact" class="inline-block bg-eventflow-black text-eventflow-primary px-8 py-4 rounded-full font-semibold hover:bg-eventflow-black-dark transition-all duration-300">
        Contacta Nuestro Equipo
      </a>
    </div>
  </section>
</BaseLayout>
