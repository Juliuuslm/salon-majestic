---
import { getCollection } from 'astro:content';
import BaseLayout from '@layouts/BaseLayout.astro';
import SectionTitle from '@components/SectionTitle.astro';

const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);

const seo = {
  title: 'Blog - EventFlow',
  description: 'Lee artículos, tips y tendencias sobre gestión de eventos profesionales.',
  type: 'website',
};
---

<BaseLayout seo={seo}>
  <!-- Page Header -->
  <section class="bg-gradient-to-r from-eventflow-primary to-eventflow-base text-white py-16">
    <div class="container-custom">
      <h1 class="text-4xl md:text-5xl font-bold">Blog</h1>
      <p class="mt-4 text-lg text-white/90">Tips, tendencias y estrategias para eventos exitosos</p>
    </div>
  </section>

  <!-- Blog Grid -->
  <section class="py-20 md:py-28 bg-white">
    <div class="container-custom">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          sortedPosts.map((post) => (
            <article class="overflow-hidden rounded-lg border border-eventflow-border bg-white transition-all duration-300 hover:shadow-lg hover:-translate-y-1">
              <div class="relative overflow-hidden bg-gray-200 h-48">
                <img
                  src={post.data.image}
                  alt={post.data.title}
                  class="h-full w-full object-cover transition-transform duration-300 hover:scale-105"
                />
                <div class="absolute top-4 left-4">
                  <span class="inline-block bg-eventflow-base text-white px-4 py-2 rounded-full text-xs font-semibold">
                    {post.data.category}
                  </span>
                </div>
              </div>

              <div class="p-6">
                <div class="mb-3 text-sm text-eventflow-gray">
                  {post.data.date.toLocaleDateString('es-ES', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric',
                  })}
                  {' • '}
                  Por {post.data.author}
                </div>

                <h3 class="mb-3 text-xl font-bold text-eventflow-black line-clamp-2 hover:text-eventflow-primary transition-colors">
                  <a href={`/blog/${post.slug}`}>
                    {post.data.title}
                  </a>
                </h3>

                <p class="mb-6 line-clamp-2 text-sm text-eventflow-gray">
                  {post.data.description}
                </p>

                <div class="flex items-center justify-between">
                  <div class="flex gap-2 flex-wrap">
                    {post.data.tags.slice(0, 2).map((tag) => (
                      <span class="inline-block bg-eventflow-extra text-eventflow-gray text-xs px-3 py-1 rounded-full">
                        {tag}
                      </span>
                    ))}
                  </div>
                  <a
                    href={`/blog/${post.slug}`}
                    class="text-sm font-semibold text-eventflow-primary hover:text-eventflow-base transition-colors"
                  >
                    Leer más →
                  </a>
                </div>
              </div>
            </article>
          ))
        }
      </div>
    </div>
  </section>
</BaseLayout>
