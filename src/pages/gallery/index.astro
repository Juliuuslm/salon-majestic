---
import BaseLayout from '@layouts/BaseLayout.astro';
import SectionTitle from '@components/SectionTitle.astro';
import PageHeaderShapes from '@components/PageHeaderShapes.astro';
import PremiumGallery from '@islands/PremiumGallery';
import gallery from '@data/gallery.json';

const seo = {
  title: 'Galería - Majestic | Salón de Eventos',
  description: 'Galería premium de eventos celebrados en Majestic. Bodas, XV años, corporativos en fotos de alta calidad.',
  type: 'website',
};
---

<BaseLayout seo={seo}>
  <!-- Page Header -->
  <PageHeaderShapes className="relative">
    <section class="bg-gradient-to-r from-eventflow-primary to-eventflow-base text-white py-20 md:py-28 lg:py-32">
      <div class="container-custom">
        <h1 class="text-4xl md:text-5xl font-bold">Galería</h1>
        <p class="mt-4 text-lg text-white/90">Momentos memorables de nuestros eventos</p>
      </div>
    </section>
  </PageHeaderShapes>

  <!-- Gallery Grid -->
  <section class="py-20 md:py-28 bg-eventflow-black">
    <div class="container-custom">
      <SectionTitle
        title="Nuestros Eventos"
        subtitle="Explora la galería premium de fotos de eventos anteriores"
        alignment="center"
      />

      <div class="mt-16">
        <PremiumGallery
          images={gallery}
          columns={3}
          gap={16}
          client:only="react"
        />
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-20 md:py-28 lg:py-32 bg-gradient-to-r from-eventflow-primary to-eventflow-base text-white text-center">
    <div class="container-custom">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">¿Listo para crear tu próximo evento?</h2>
      <a href="/contact" class="inline-block bg-eventflow-black text-eventflow-primary px-8 py-4 rounded-full font-semibold hover:bg-eventflow-black-dark transition-all duration-300">
        Solicitar Información
      </a>
    </div>
  </section>
</BaseLayout>
