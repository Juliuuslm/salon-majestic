---
import BaseLayout from '@layouts/BaseLayout.astro';
import gallery from '@data/gallery.json';

export function getStaticPaths() {
  return gallery.map((item) => ({
    params: { id: item.id },
    props: { item },
  }));
}

interface Props {
  item: any;
}

const { item } = Astro.props;
const allItems = gallery;
const currentIndex = allItems.findIndex((i) => i.id === item.id);
const previousItem = currentIndex > 0 ? allItems[currentIndex - 1] : allItems[allItems.length - 1];
const nextItem = currentIndex < allItems.length - 1 ? allItems[currentIndex + 1] : allItems[0];

const seo = {
  title: `${item.title} - Galería EventFlow`,
  description: item.description || `Momento del evento ${item.title}`,
  image: item.image,
  type: 'image',
};
---

<BaseLayout seo={seo}>
  <!-- Lightbox Container -->
  <section class="min-h-screen bg-gradient-to-b from-eventflow-black to-gray-900 py-12">
    <div class="container-custom">
      <!-- Back Button -->
      <a href="/gallery" class="mb-8 inline-flex items-center gap-2 text-white/70 hover:text-white transition-colors">
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Volver a Galería
      </a>

      <!-- Main Image -->
      <div class="mb-8">
        <img
          src={item.image}
          alt={item.title}
          class="w-full max-h-96 md:max-h-screen object-contain rounded-lg shadow-2xl"
        />
      </div>

      <!-- Image Info -->
      <div class="rounded-lg bg-white p-8 mb-8">
        <div class="mb-6 flex flex-wrap items-center gap-3">
          <span class="inline-block rounded-full bg-eventflow-primary/20 px-4 py-2 text-sm font-semibold text-eventflow-primary capitalize">
            {item.category}
          </span>
        </div>

        <h1 class="mb-4 text-4xl font-bold text-eventflow-black">{item.title}</h1>

        {item.description && (
          <p class="mb-6 text-lg text-eventflow-gray leading-relaxed">
            {item.description}
          </p>
        )}

        <!-- Share Buttons -->
        <div class="flex gap-4 items-center">
          <span class="text-sm font-medium text-eventflow-gray">Compartir:</span>
          <a
            href={`https://facebook.com/sharer/sharer.php?u=${Astro.url.href}`}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 rounded-full bg-blue-600 px-4 py-2 text-sm text-white hover:bg-blue-700 transition-colors"
          >
            <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z" />
            </svg>
            Facebook
          </a>
          <a
            href={`https://twitter.com/intent/tweet?url=${Astro.url.href}&text=${item.title}`}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 rounded-full bg-sky-500 px-4 py-2 text-sm text-white hover:bg-sky-600 transition-colors"
          >
            <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23.953 4.57a10 10 0 002.856-3.898 9.958 9.958 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z" />
            </svg>
            Twitter
          </a>
        </div>
      </div>

      <!-- Navigation -->
      <div class="grid grid-cols-2 gap-4">
        <a
          href={`/gallery/${previousItem.id}`}
          class="flex items-center gap-3 rounded-lg border border-eventflow-border bg-white p-4 transition-all duration-300 hover:bg-eventflow-extra hover:border-eventflow-primary"
        >
          <svg class="h-5 w-5 text-eventflow-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          <div>
            <p class="text-xs text-eventflow-gray">Anterior</p>
            <p class="font-semibold text-eventflow-black line-clamp-1">{previousItem.title}</p>
          </div>
        </a>

        <a
          href={`/gallery/${nextItem.id}`}
          class="flex items-center justify-end gap-3 rounded-lg border border-eventflow-border bg-white p-4 transition-all duration-300 hover:bg-eventflow-extra hover:border-eventflow-primary text-right"
        >
          <div>
            <p class="text-xs text-eventflow-gray">Siguiente</p>
            <p class="font-semibold text-eventflow-black line-clamp-1">{nextItem.title}</p>
          </div>
          <svg class="h-5 w-5 text-eventflow-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
