---
import BaseLayout from '@layouts/BaseLayout.astro';
import SectionTitle from '@components/SectionTitle.astro';
import PageHeaderShapes from '@components/PageHeaderShapes.astro';
import ContactForm from '@islands/ContactForm';

const seo = {
  title: 'Contacto - Majestic | Salón de Eventos en Puebla',
  description: 'Contacta a Majestic para agendar tu consulta gratuita y conocer nuestro venue de lujo.',
  type: 'website',
};
---

<BaseLayout seo={seo}>
  <!-- Page Header -->
  <section class="bg-gradient-to-r from-eventflow-primary to-eventflow-base text-white py-20 md:py-28 lg:py-32">
    <div class="container-custom">
      <h1 class="text-4xl md:text-5xl font-bold">Contacta con Majestic</h1>
      <p class="mt-4 text-lg text-white/90">Agendar una consulta gratuita y descubre tu venue de ensueño</p>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="py-20 md:py-28 bg-eventflow-black">
    <div class="container-custom">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Contact Info -->
        <div>
          <SectionTitle
            title="¿Cómo Podemos Ayudarte?"
            subtitle="Contacta con nuestro equipo para discutir tu próximo evento"
            alignment="left"
          />

          <div class="mt-12 space-y-8">
            <!-- Email -->
            <div class="flex gap-4">
              <div class="flex-shrink-0">
                <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-eventflow-primary/20 text-eventflow-primary">
                  <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </div>
              </div>
              <div>
                <h3 class="font-semibold text-white mb-1">Email</h3>
                <p class="text-gray-300">contacto@majesticpuebla.com</p>
              </div>
            </div>

            <!-- Phone -->
            <div class="flex gap-4">
              <div class="flex-shrink-0">
                <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-eventflow-primary/20 text-eventflow-primary">
                  <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                </div>
              </div>
              <div>
                <h3 class="font-semibold text-white mb-1">Teléfono</h3>
                <p class="text-gray-300">(222) XXX-XXXX</p>
              </div>
            </div>

            <!-- Address -->
            <div class="flex gap-4">
              <div class="flex-shrink-0">
                <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-eventflow-primary/20 text-eventflow-primary">
                  <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                </div>
              </div>
              <div>
                <h3 class="font-semibold text-white mb-1">Ubicación</h3>
                <p class="text-gray-300">Ubicación Privilegiada en Puebla</p>
                <p class="text-gray-300">Puebla, México</p>
              </div>
            </div>

            <!-- Horarios -->
            <div class="flex gap-4">
              <div class="flex-shrink-0">
                <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-eventflow-primary/20 text-eventflow-primary">
                  <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
              </div>
              <div>
                <h3 class="font-semibold text-white mb-1">Disponibilidad</h3>
                <p class="text-gray-300">Abierto para eventos de martes a domingo</p>
                <p class="text-gray-300">Consultas: Lunes a viernes 10:00 - 18:00</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Contact Form -->
        <div>
          <div class="rounded-lg border border-eventflow-border-dark bg-eventflow-black p-8">
            <h3 class="text-2xl font-bold text-white mb-6">Solicita tu Consulta Gratuita</h3>
            <ContactForm client:load />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-20 md:py-28 lg:py-32 bg-eventflow-black-dark text-center">
    <div class="container-custom">
      <h2 class="text-3xl font-bold mb-4">¿Tienes una Emergencia?</h2>
      <p class="text-gray-300 mb-6 max-w-2xl mx-auto">
        Nuestro equipo está disponible 24/7 para emergencias relacionadas con eventos.
      </p>
      <a href="tel:+34913000000" class="btn-primary ripple-btn">
        Llamar Ahora
      </a>
    </div>
  </section>
</BaseLayout>
